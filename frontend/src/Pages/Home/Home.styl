@import url('https://fonts.googleapis.com/css2?family=Smokum&family=Syne+Mono&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Lobster&family=Smokum&family=Syne+Mono&display=swap');


body 
    margin: 0px
    display: flex
    flex-direction: column
    background-image: url("..\Used_images\burger.jpg")
    background-repeat: no-repeat
    background-size: cover
    font-family: 'Smokum', cursive;
    font-size: 40px
    height: 1000px

.Home_container
    display: flex
    flex-direction: row
    padding: 10px
    margin: 10px
    border-radius: 10px
    font-size: 25px
    width: 60%
    @media only screen and (max-width:700px )
        flex-direction: column
        

.Home_left-side
    display: flex
    flex-direction: column
    width: fit-content
    margin: 0px
    font-family: 'Lobster', cursive;
    

.Home_right-side
    display: flex
    flex-direction: column
    width: 700px
    padding: 100px


.Home_body
    color: white
    margin: 20px
    font-size: 25px