body 
    margin: 0px
    display: flex
    flex-direction: column
    background-color: rgb(0, 0, 0)

.Home_container
    background-color: rgba(43, 43, 43, 0.774)
    display: flex
    flex-direction: row
    padding: 10px
    margin: 10px
    border-radius: 10px
    font-size: 25px
    @media only screen and (max-width:700px )
        flex-direction: column
        

.Home_left-side
    display: flex
    flex-direction: column
    width: fit-content
    margin: 0px
    

.Home_right-side
    display: flex
    flex-direction: column
    width: 700px
    padding: 100px


.Home_body
    color: white
    margin: 20px
    font-size: 25px