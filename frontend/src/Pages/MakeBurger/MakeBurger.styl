.MakeBurger_container
    display: flex
    flex-direction: column
    padding 50px
    align-items: center

.MakeBurger_background
    display: flex
    width: 80%
    height: 900px
    align-items: center
    justify-content: center
    opacity 0.7
    background-image: url("https://e0.pxfuel.com/wallpapers/330/110/desktop-wallpaper-recipe-background-baking-old-book-cover.jpg")
    background-size: cover
    background-position: center
    position: relative
    @media only screen and (max-width:1000px )
        background-image: url("/home/katka/Asztal/bookpage.jpg")


.MakeBurger_forms
    display: flex
    flex-direction: row
    justify-content: center
    position: absolute
    height: 900px
    width: 100%
    opacity: 1    
    padding 100px
    justify-content: center
    padding-left:100px
    padding-right:100px
    color: black
    @media only screen and (max-width:1000px )
        flex-direction: column
        width: 500px
        align-items: center
        padding: 0px
        height: fit-content
        padding: 100px


.MakeBurger_left
    display: flex
    flex-direction: column
    width: 300px
    margin-right: 50px 

.MakeBurger_instruction
    display: flex
    flex-direction: row
    font-size: 15px
    font-family: Sans-serif

.MakeBurger_right
    display: flex
    height: 600px
    width: 300px
    flex-direction: column
    @media only screen and (max-width: 1000px)
        flex-direction: column
        justify-content: center
        height: 600px
    
    
.MakeBurger_bun-top
    display: flex
    flex-direction: row
    background-color: rgb(255, 182, 66)
    height: 40px
    width: 300px
    border-top-left-radius: 40px 
    border-top-right-radius: 40px

.MakeBurger_bun-bottom
    display: flex
    flex-direction: row
    height: 40px
    width: 300px
    background-color: rgb(255, 182, 66)
    height: 40px
    border-bottom-left-radius: 40px 
    border-bottom-right-radius: 40px

.MakeBurger_cucumber-container
    display: flex
    flex-direction: row
    width: 300px

.MakeBurger_cucumber
    background-color: rgb(10, 80, 10)
    width: 150px
    height: 20px
    border-radius: 15px
    display: flex
    flex-direction: row
    justify-content: center
    align-items: center
    color: rgb(185, 240, 185)
    margin:0px

.MakeBurger_tomato-container
    display: flex
    flex-direction: row
    width: 300px

.MakeBurger_tomato
    background-color: rgb(238, 33, 33)
    width: 200px
    height: 30px
    border-radius: 15px
    display: flex
    flex-direction: row
    justify-content: center
    align-items: center
    color: rgb(250, 163, 163)

.MakeBurger_cheese
    background-color: rgb(222, 163, 13)
    width: 300px
    height: 20px
    border-radius: 15px
    display: flex
    flex-direction: row
    justify-content: center
    align-items: center
    color: rgb(80, 80, 6)

.MakeBurger_ing-container
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center

.MakeBurger_mapIngredients
    display: flex
    flex-direction: column
    width: 200px
    height: 40px
    align-items: center
    margin: 1px

.MakeBurger_ing-text
    margin: 0px
    font-size: 15px

.MakeBurger_ing-button
    display: flex
    flex-direction: row
    align-items: center

.MakeBurger_remove-butt
    display: flex
    flex-direction: row
    border-radius: 10px
    background-color: pink
    color: red
    align-items: center
    height: 20px