.MakeBurger_container
    display: flex
    flex-direction: column
    padding 50px
    align-items: center

.MakeBurger_background
    display: flex
    width: 80%
    height: 900px
    align-items: center
    justify-content: center
    opacity 0.7
    background-image: url("https://e0.pxfuel.com/wallpapers/330/110/desktop-wallpaper-recipe-background-baking-old-book-cover.jpg")
    background-size: cover
    background-position: center
    position: relative
    @media only screen and (max-width:1000px )
        background-image: url("/home/katka/Asztal/bookpage.jpg")


.MakeBurger_forms
    display: flex
    flex-direction: row
    position: absolute
    height: 900px
    width: 100%
    opacity: 1    
    padding 100px
    justify-content: space-evenly
    padding-left:100px
    padding-right:100px
    @media only screen and (max-width:1000px )
        flex-direction: column
        width: 500px
        align-items: center
        padding: 0px
        height: 700px


.MakeBurger_left-form
    display: flex
    flex-direction: column
    justify-content: flex-start