.UserPage_container
    display: flex
    flex-direction: column
    height: 1000px
    width: 100%
    align-items: center



.UserPage_burgers-list
    display: flex
    width: 80%
    height: 80%
    overflow: auto
    flex-direction: column
    background-color: rgba(51, 31, 31, 0.753)
    color: white
    align-items: center 

.UserPage_list-items
    display: flex
    flex-direction: row
    background-image: url("..\Used_images\plank.jpg")
    background-color: rgba(0, 0, 0, 0.11)
    background-repeat: no-repeat
    background-position:cover
    width: 90%
    height: fit-content
    margin: 20px
    justify-content: center
    flex-flow: row wrap
    text-shadow: 2px 3px 2px black


.UserPage_button-burgers
    display: flex
    flex-direction: row
    width: 90%
    justify-content: flex-start
    align-items: center
    background-color: rgb(46, 11, 11)
    padding: 10px
    border-radius: 10px
    margin: 10px

.UserPage_list-element
    display: flex
    flex-direction: row
    margin: 10px
    padding: 2px
    align-items: center 

.UserPage_index
    font-size: 60px
    margin: 0px
    margin-left: 10px
    color: black
    text-shadow: 2px 3px 2px white

.material-symbols-outlined
    display: flex
    flex-direction: row
    justify-content: center
    align-items: center
    color: red
    background-color: rgba(206, 75, 75, 0.411)
    border-radius: 15px
    height: 50px
    width: 100px
    font-size: 30px