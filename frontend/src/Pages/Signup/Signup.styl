.Signup_container
    display: flex
    flex-direction: column
    width: 400px
    height: 600px
    margin: 100px
    margin-bottom: 400px
    

.Signup_background
    display: flex 
    flex-direction: column
    position: absolute
    background-color: rgb(51, 31, 31)
    filter: blur(4px);
    align-items: center
    height: 600px
    width: 500px
    opacity: 0.5


.Signup_forms
    display: flex
    margin: 20px
    flex-direction: column
    align-items: center
    width: 400px
    height: 100%


.Signup_inputs
    display: flex
    flex-direction: row
    justify-content: flex-start
    align-items: flex-end
    margin: 0px
    position: relative
    width: 400px
    height: 60px


.Signup_labels
    position: absolute
    display: flex
    height: 30px
    margin: 0px
    margin-left: 5px
    font-size: 20px
    font-family: sans-serif
    align-items: center
    transition: 0.5s

    

.Signup_input
    position: absolute
    display: flex
    background: transparent
    width: 300px
    padding: 4px
    border: 0px
    border-bottom: solid 3px black
    outline: none
    height: 30px
    color: black
    transition: 0.5s

.Signup_input:focus + .Signup_labels
    color: black
    font-size: 20px
    transition: 0.5s
    transform: translateY(-30px) 


    